{
  "name": "food-delivery-app",
  "version": "1.0.0",
  "private": true,
  "description": "Full-stack food delivery application with real-time tracking",
  "scripts": {
    "build": "cd apps/web && npm run build && cd apps/api && npm run build",
    "dev": "concurrently \"cd apps/web && npm run dev\" \"cd apps/api && npm run dev\"",
    "dev:api": "cd apps/api && npm run dev",
    "dev:web": "cd apps/web && npm run dev",
    "docker:build": "docker build -t food-delivery-app:latest .",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:up": "docker-compose up -d",
    "lint": "concurrently \"cd apps/web && npm run lint\" \"cd apps/api && npm run lint\"",
    "prisma:generate": "cd apps/api && npx prisma generate",
    "prisma:migrate": "cd apps/api && npx prisma migrate dev",
    "seed": "cd apps/api && node scripts/seed.js",
    "start": "cd apps/api && npm start",
    "test": "concurrently \"cd apps/api && npm test\" \"cd apps/web && npm test\"",
    "test:api": "cd apps/api && npm test",
    "test:web": "cd apps/web && npm test"
  },
  "dependencies": {
    "@prisma/client": "latest",
    "@reduxjs/toolkit": "latest",
    "@stripe/js": "latest",
    "@stripe/react-stripe-js": "latest",
    "@stripe/stripe-js": "latest",
    "@vitejs/plugin-react": "latest",
    "axios": "latest",
    "bcryptjs": "latest",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cookie-parser": "latest",
    "cors": "latest",
    "dotenv": "latest",
    "express": "latest",
    "http": "latest",
    "jiti": "latest",
    "jsonwebtoken": "latest",
    "less": "latest",
    "lightningcss": "latest",
    "lucide-react": "^0.454.0",
    "next": "16.0.1",
    "nodemailer": "latest",
    "prisma": "latest",
    "react": "19.2.0",
    "react-dom": "latest",
    "react-redux": "latest",
    "react-router-dom": "latest",
    "redux": "latest",
    "sass": "latest",
    "sass-embedded": "latest",
    "socket.io": "latest",
    "socket.io-client": "latest",
    "stripe": "latest",
    "stylus": "latest",
    "sugarss": "latest",
    "supertest": "latest",
    "tailwind-merge": "^2.5.5",
    "tailwindcss-animate": "^1.0.7",
    "terser": "latest",
    "tsx": "latest",
    "vite": "latest",
    "yaml": "latest"
  },
  "devDependencies": {
    "@types/node": "^22",
    "@types/react": "19.2.2",
    "@types/react-dom": "19.2.2",
    "concurrently": "^8.2.2",
    "postcss": "^8.5",
    "tailwindcss": "4.1.16",
    "typescript": "^5"
  }
}